<Page x:Class="BMS.Overlay.Views.BmsTabView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BMS Orders" Background="Transparent" Foreground="#D8D8D8"
    Loaded="Page_Loaded">
    <Grid Background="Transparent">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Stretch">
                <!-- Order Title -->
                <TextBlock x:Name="OrderTitle"
                           FontSize="{Binding ContentFontSize}" FontWeight="Bold" Foreground="#D8D8D8"
                           Text="{Binding CurrentOrder.Title, FallbackValue='WELCOME TO THE BMS'}"
                           Margin="0,0,0,6"/>

                <!-- Order Index Counter -->
                <TextBlock FontSize="{Binding ContentFontSize}" Foreground="#6A6A6A" Margin="0,0,0,10">
                    <Run Text="ORDER "/>
                    <Run Text="{Binding CurrentOrderIndex, Mode=OneWay}"/>
                    <Run Text=" OF "/>
                    <Run Text="{Binding TotalOrders, Mode=OneWay}"/>
                </TextBlock>

                <!-- Sections Container (populated in code-behind) -->
                <StackPanel x:Name="SectionsPanel"/>

                <!-- Legacy Content (for orders without sections) -->
                <Border x:Name="LegacyContentBorder" BorderBrush="#2A2A2A" BorderThickness="1" 
                    Padding="0" Background="#0A0A0A" Visibility="Collapsed">
                    <RichTextBox x:Name="OrderContent"
                                 FontSize="12" Foreground="#D8D8D8" Background="Transparent"
                                 IsReadOnly="True" BorderThickness="0"
                                 IsDocumentEnabled="True" Padding="10"
                                 VerticalScrollBarVisibility="Auto"/>
                </Border>

                <!-- No Orders Message -->
                <StackPanel x:Name="NoOrdersPanel" VerticalAlignment="Center" Margin="20">
                    <TextBlock Text="NO ORDERS AVAILABLE" FontSize="14" FontWeight="Bold" 
                               Foreground="#D8D8D8" TextAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="SELECT A FACTION FROM THE BMS OPTIONS TAB TO VIEW PUBLISHED ORDERS."
                               FontSize="11" Foreground="#A0A0A0" TextWrapping="Wrap" TextAlignment="Center"/>

                    <TextBlock Text="HOW TO USE BMS OVERLAY" FontSize="12" FontWeight="Bold"
                               Foreground="#D8D8D8" Margin="0,14,0,8" TextAlignment="Center"/>

                    <!-- Default Text Section Example -->
                    <Border BorderBrush="#2A2A2A" BorderThickness="1" Background="#0A0A0A"
                            Padding="10" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="1) SELECT A FACTION" Foreground="#D8D8D8" FontSize="11" FontWeight="Bold"/>
                            <TextBlock Text="OPEN BMS OPTIONS, CHOOSE YOUR FACTION, AND PICK YOUR ROLE. ORDERS ARE FILTERED BY YOUR ROLE AUTOMATICALLY."
                                       Foreground="#A0A0A0" FontSize="11" TextWrapping="Wrap" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Default Poll Section Example -->
                    <Border BorderBrush="#2A2A2A" BorderThickness="1" Background="#0A0A0A"
                            Padding="10" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="2) NAVIGATE ORDERS" Foreground="#D8D8D8" FontSize="11" FontWeight="Bold"/>
                            <TextBlock Text="USE THE LEFT AND RIGHT ARROWS TO CYCLE THROUGH PUBLISHED ORDERS."
                                       Foreground="#A0A0A0" FontSize="11" TextWrapping="Wrap" Margin="0,6,0,8"/>
                            <Border Background="#0D0D0D" Height="24" Margin="0,0,0,4" BorderBrush="#2A2A2A" BorderThickness="1">
                                <TextBlock Text="◀ PREVIOUS ORDER" Foreground="#6A6A6A" FontSize="10"
                                           VerticalAlignment="Center" Margin="8,0"/>
                            </Border>
                            <Border Background="#0D0D0D" Height="24" BorderBrush="#2A2A2A" BorderThickness="1">
                                <TextBlock Text="▶ NEXT ORDER" Foreground="#6A6A6A" FontSize="10"
                                           VerticalAlignment="Center" Margin="8,0"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Default Checklist Section Example -->
                    <Border BorderBrush="#2A2A2A" BorderThickness="1" Background="#0A0A0A"
                            Padding="10">
                        <StackPanel>
                            <TextBlock Text="3) INTERACT WITH CONTENT" Foreground="#D8D8D8" FontSize="11" FontWeight="Bold"/>
                            <TextBlock Text="VOTE ON POLLS AND CHECK CHECKLIST ITEMS DIRECTLY IN THIS TAB. CHANGES SYNC IN REAL TIME."
                                       Foreground="#A0A0A0" FontSize="11" TextWrapping="Wrap" Margin="0,6,0,6"/>
                            <TextBlock Text="• POLLS: CLICK ONE OPTION TO VOTE" Foreground="#A0A0A0" FontSize="11" Margin="0,0,0,2"/>
                            <TextBlock Text="• CHECKLISTS: TICK ITEMS TO MARK COMPLETE" Foreground="#A0A0A0" FontSize="11" Margin="0,0,0,2"/>
                            <TextBlock Text="• USE '—' TO MINIMIZE AND '+' TO REOPEN" Foreground="#A0A0A0" FontSize="11"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

