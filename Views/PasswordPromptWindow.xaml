<Window x:Class="BMS.Overlay.Views.PasswordPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Faction Access" Height="220" Width="420"
        WindowStartupLocation="CenterOwner"
        Background="#0A0A0A" Foreground="{StaticResource PrimaryTextBrush}"
        ShowInTaskbar="False"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">
    <Window.Resources>
        <!-- Button styles and color resources now in App.xaml -->
    </Window.Resources>
    <StackPanel Margin="16" VerticalAlignment="Center">
        <TextBlock Text="ENTER FACTION VIEW PASSWORD" 
                   FontSize="13" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,12"/>
        
        <Grid Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="44"/>
            </Grid.ColumnDefinitions>

            <PasswordBox x:Name="PasswordBox" Grid.Column="0"
                         Background="{StaticResource PanelBackgroundBrush}"
                         Foreground="{StaticResource PrimaryTextBrush}"
                         BorderBrush="{StaticResource PanelBorderBrush}"
                         Padding="10,8" Height="33"
                         CaretBrush="{StaticResource DarkTextBrushHover}" PasswordChanged="PasswordBox_PasswordChanged"/>

            <TextBox x:Name="PlainTextPasswordBox" Grid.Column="0"
                     Background="{StaticResource PanelBackgroundBrush}"
                     Foreground="{StaticResource PrimaryTextBrush}"
                     BorderBrush="{StaticResource PanelBorderBrush}"
                     Padding="10,8" Height="33"
                     CaretBrush="{StaticResource DarkTextBrushHover}" Visibility="Collapsed"
                     TextChanged="PlainTextPasswordBox_TextChanged"/>

                <Button x:Name="TogglePasswordButton" Grid.Column="2" Content="ðŸ‘"
                    Style="{StaticResource TacticalDarkButton}"
                    FontSize="16" ToolTip="Show password"
                    Click="TogglePasswordButton_Click"/>
        </Grid>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="ACCESS" Click="OkButton_Click"
                    Style="{StaticResource TacticalGoldButton}"
                    ToolTip="Confirm and access faction"/>
                <Button Grid.Column="2" Content="CANCEL" Click="CancelButton_Click"
                    Style="{StaticResource TacticalDarkButton}"
                    ToolTip="Cancel access"/>
        </Grid>
    </StackPanel>
</Window>
