<Window x:Class="BMS.Overlay.Views.PasswordPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Faction Access" Height="220" Width="420"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A2E" Foreground="White"
        ShowInTaskbar="False"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">
    <Window.Resources>
        <LinearGradientBrush x:Key="GoldButtonBackground" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#111113" Offset="0"/>
            <GradientStop Color="#2A2315" Offset="0.5"/>
            <GradientStop Color="#111113" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="GoldButtonBackgroundHover" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#1A1A1D" Offset="0"/>
            <GradientStop Color="#3A311B" Offset="0.5"/>
            <GradientStop Color="#1A1A1D" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="GoldBorderBrush" Color="#D4AF37"/>
        <SolidColorBrush x:Key="GoldTextBrush" Color="#E3C341"/>

        <LinearGradientBrush x:Key="DarkButtonBackground" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#020407" Offset="0"/>
            <GradientStop Color="#06090E" Offset="0.5"/>
            <GradientStop Color="#020407" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DarkButtonBackgroundHover" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#05080D" Offset="0"/>
            <GradientStop Color="#0A0E15" Offset="0.5"/>
            <GradientStop Color="#05080D" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="DarkBorderBrush" Color="#252B33"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#6F747D"/>
        <SolidColorBrush x:Key="DarkHoverBorderBrush" Color="#4B5563"/>
        <SolidColorBrush x:Key="DarkHoverTextBrush" Color="#C7CDD6"/>

        <Style x:Key="PromptGoldButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource GoldTextBrush}"/>
            <Setter Property="Background" Value="{StaticResource GoldButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GoldBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource GoldButtonBackgroundHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PromptDarkButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="Background" Value="{StaticResource DarkButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource DarkButtonBackgroundHover}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource DarkHoverBorderBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource DarkHoverTextBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.92"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <StackPanel Margin="16" VerticalAlignment="Center">
        <TextBlock Text="Enter Faction View Password" 
                   FontSize="13" FontWeight="Bold" Foreground="White" Margin="0,0,0,12"/>
        
        <Grid Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="44"/>
            </Grid.ColumnDefinitions>

            <PasswordBox x:Name="PasswordBox" Grid.Column="0"
                         Background="#0F3460" Foreground="White"
                         Padding="10,8" Height="44"
                         CaretBrush="White" PasswordChanged="PasswordBox_PasswordChanged"/>

            <TextBox x:Name="PlainTextPasswordBox" Grid.Column="0"
                     Background="#0F3460" Foreground="White"
                     Padding="10,8" Height="44"
                     CaretBrush="White" Visibility="Collapsed"
                     TextChanged="PlainTextPasswordBox_TextChanged"/>

            <Button x:Name="TogglePasswordButton" Grid.Column="2" Content="ðŸ‘"
                    Style="{StaticResource PromptDarkButtonStyle}"
                    FontSize="16" ToolTip="Show password"
                    Click="TogglePasswordButton_Click"/>
        </Grid>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="ACCESS" Click="OkButton_Click"
                    Style="{StaticResource PromptGoldButtonStyle}"
                    ToolTip="Confirm and access faction"/>
            <Button Grid.Column="2" Content="CANCEL" Click="CancelButton_Click"
                    Style="{StaticResource PromptDarkButtonStyle}"
                    ToolTip="Cancel access"/>
        </Grid>
    </StackPanel>
</Window>
