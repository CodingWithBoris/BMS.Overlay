<Window x:Class="BMS.Overlay.Views.PasswordPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Faction Access" Height="150" Width="300"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A2E" Foreground="White"
        ShowInTaskbar="False"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Enter Faction View Password" 
                   FontSize="12" FontWeight="Bold" Foreground="White" Margin="0,0,0,15"/>
        
        <PasswordBox x:Name="PasswordBox" 
                     Background="#0F3460" Foreground="White" 
                     Padding="8" Margin="0,0,0,15" Height="35"
                     CaretBrush="White"/>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="✓ Confirm" Click="OkButton_Click" 
                    Width="90" Padding="10,8" Margin="0,0,10,0"
                    Background="#27AE60" Foreground="White" FontWeight="Bold" FontSize="11"
                    ToolTip="Confirm and access faction"/>
            <Button Content="✕ Cancel" Click="CancelButton_Click" 
                    Width="90" Padding="10,8"
                    Background="#E94560" Foreground="White" FontSize="11"
                    ToolTip="Cancel access"/>
        </StackPanel>
    </StackPanel>
</Window>
