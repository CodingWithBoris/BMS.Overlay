<Page x:Class="BMS.Overlay.Views.BmsOptionsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="BMS Options" Background="#0F3460" Foreground="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="10" VerticalAlignment="Top">
            <!-- Faction Selection -->
            <TextBlock Text="Faction" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
            <ComboBox x:Name="FactionCombo" 
                      ItemsSource="{Binding Factions}"
                      DisplayMemberPath="Title"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding SelectedFactionId}"
                      SelectionChanged="FactionCombo_SelectionChanged"
                      Margin="0,0,0,10" Padding="8" 
                      Background="#1A1A3E" Foreground="White">
                <ComboBox.Style>
                    <Style TargetType="ComboBox">
                        <Setter Property="BorderBrush" Value="#555"/>
                    </Style>
                </ComboBox.Style>
            </ComboBox>
            
            <!-- Role Selection -->
            <TextBlock Text="Role" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
            <ComboBox x:Name="RoleCombo" 
                      SelectedValue="{Binding SelectedRoleId}"
                      Margin="0,0,0,10" Padding="8"
                      Background="#1A1A3E" Foreground="White">
                <ComboBoxItem>Default</ComboBoxItem>
            </ComboBox>
            
            <!-- Divider -->
            <Separator Margin="0,15,0,15" Foreground="#444" Height="1"/>
            
            <!-- Keybinds Section -->
            <TextBlock Text="Keybinds" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
            <TextBlock FontSize="10" Foreground="#CCCCCC" Margin="0,0,0,10"
                       Text="Global hotkeys for overlay control. Changes take effect immediately."/>
            
            <!-- Previous Order Keybind -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Previous:" VerticalAlignment="Center" Width="70" Foreground="#DDD" FontSize="11"/>
                <TextBox x:Name="KeyPrevBox" Width="100" Padding="6" Text="Left Arrow"
                         Background="#1A1A3E" Foreground="White" CaretBrush="White" BorderBrush="#555"/>
            </StackPanel>
            
            <!-- Next Order Keybind -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Next:" VerticalAlignment="Center" Width="70" Foreground="#DDD" FontSize="11"/>
                <TextBox x:Name="KeyNextBox" Width="100" Padding="6" Text="Right Arrow"
                         Background="#1A1A3E" Foreground="White" CaretBrush="White" BorderBrush="#555"/>
            </StackPanel>
            
            <!-- Minimize Keybind -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Minimize:" VerticalAlignment="Center" Width="70" Foreground="#DDD" FontSize="11"/>
                <TextBox x:Name="KeyMinimizeBox" Width="100" Padding="6" Text="F9"
                         Background="#1A1A3E" Foreground="White" CaretBrush="White" BorderBrush="#555"/>
            </StackPanel>
            
            <!-- Restore Keybind -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Restore:" VerticalAlignment="Center" Width="70" Foreground="#DDD" FontSize="11"/>
                <TextBox x:Name="KeyRestoreBox" Width="100" Padding="6" Text="F9"
                         Background="#1A1A3E" Foreground="White" CaretBrush="White" BorderBrush="#555"/>
            </StackPanel>

            <!-- Info Section -->
            <Separator Margin="0,15,0,15" Foreground="#444" Height="1"/>
            <TextBlock FontSize="10" Foreground="#999" TextWrapping="Wrap" Margin="0,0,0,15">
                <Run FontWeight="Bold" Text="Info: "/>
                <Run Text="Use the overlay to view BMS orders published by faction officers. Select a faction to authenticate and view its content."/>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</Page>
