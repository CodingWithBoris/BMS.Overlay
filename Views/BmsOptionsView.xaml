<Page x:Class="BMS.Overlay.Views.BmsOptionsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="BMS Options" Background="Transparent" Foreground="#D8D8D8">
    <Page.Resources>
        <!-- ═══ TACTICAL DESIGN SYSTEM COLORS ═══ -->
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#0A0A0A"/>
        <SolidColorBrush x:Key="PanelBorderBrush" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="HeaderLineBrush" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#D8D8D8"/>
        <SolidColorBrush x:Key="MutedTextBrush" Color="#A0A0A0"/>
        <SolidColorBrush x:Key="DimTextBrush" Color="#6A6A6A"/>
        <SolidColorBrush x:Key="GoldTextBrush" Color="#D8D8D8"/>

        <!-- Section header -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="SectionLineStyle" TargetType="Border">
            <Setter Property="Height" Value="1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="{StaticResource HeaderLineBrush}"/>
        </Style>

        <!-- Setting row — flat, no rounded corners -->
        <Style x:Key="SettingRowStyle" TargetType="Border">
            <Setter Property="Background" Value="#141414"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
            <Setter Property="Padding" Value="14,10"/>
        </Style>

        <Style x:Key="SettingLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <!-- TextBox — flat dark -->
        <Style x:Key="ReadableTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#0A0A0A"/>
            <Setter Property="Foreground" Value="#D8D8D8"/>
            <Setter Property="CaretBrush" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="180"/>
        </Style>

        <!-- Keybind key-button — flat, sharp corners -->
        <Style x:Key="KeybindButtonStyle" TargetType="Border">
            <Setter Property="Background" Value="#0A0A0A"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Padding" Value="14,7"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="KeybindTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#A0A0A0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Keybind row — alternating dark rows -->
        <Style x:Key="KeybindRowStyle" TargetType="Border">
            <Setter Property="Background" Value="#141414"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Padding" Value="14,10"/>
        </Style>

        <Style x:Key="KeybindRowAltStyle" TargetType="Border">
            <Setter Property="Background" Value="#0D0D0D"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Padding" Value="14,10"/>
        </Style>

        <Style x:Key="KeybindLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Section header matching game UI -->
        <Style x:Key="GameSectionTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="GameSectionLineStyle" TargetType="Border">
            <Setter Property="Height" Value="1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="{StaticResource HeaderLineBrush}"/>
        </Style>
    </Page.Resources>
    <Grid Background="Transparent">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="8,8,8,12" VerticalAlignment="Top">
                <DockPanel Margin="0,0,0,10">
                    <TextBlock Text="UNITS" Style="{StaticResource SectionTitleStyle}"/>
                    <Border Style="{StaticResource SectionLineStyle}"/>
                </DockPanel>

                <Border Style="{StaticResource SettingRowStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="FACTION" Style="{StaticResource SettingLabelStyle}"/>
                        <ComboBox x:Name="FactionCombo" Grid.Column="1"
                                  ItemsSource="{Binding Factions}"
                                  DisplayMemberPath="Title"
                                  SelectedValuePath="Id"
                                  SelectedValue="{Binding SelectedFactionId}"
                                  IsEditable="True"
                                  IsTextSearchEnabled="False"
                                  SelectionChanged="FactionCombo_SelectionChanged"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource SettingRowStyle}" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="ROLE" Style="{StaticResource SettingLabelStyle}"/>
                        <ComboBox x:Name="RoleCombo" Grid.Column="1"
                                  ItemsSource="{Binding Roles}"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Id"
                                  SelectedValue="{Binding SelectedRoleId}"/>
                    </Grid>
                </Border>

                <DockPanel Margin="0,0,0,6">
                    <TextBlock Text="KEYBINDS" Style="{StaticResource GameSectionTitleStyle}"/>
                    <Border Style="{StaticResource GameSectionLineStyle}"/>
                </DockPanel>

                <!-- PREVIOUS ORDER -->
                <Border Style="{StaticResource KeybindRowStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="PREVIOUS ORDER" Style="{StaticResource KeybindLabelStyle}"/>
                        <Border x:Name="KeyPrevBorder" Grid.Column="1" Style="{StaticResource KeybindButtonStyle}"
                                MouseLeftButtonUp="KeybindButton_Click" Tag="KeyPrevious">
                            <TextBlock x:Name="KeyPrevText" Style="{StaticResource KeybindTextStyle}"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- NEXT ORDER -->
                <Border Style="{StaticResource KeybindRowAltStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="NEXT ORDER" Style="{StaticResource KeybindLabelStyle}"/>
                        <Border x:Name="KeyNextBorder" Grid.Column="1" Style="{StaticResource KeybindButtonStyle}"
                                MouseLeftButtonUp="KeybindButton_Click" Tag="KeyNext">
                            <TextBlock x:Name="KeyNextText" Style="{StaticResource KeybindTextStyle}"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- MINIMIZE -->
                <Border Style="{StaticResource KeybindRowStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="MINIMIZE" Style="{StaticResource KeybindLabelStyle}"/>
                        <Border x:Name="KeyMinimizeBorder" Grid.Column="1" Style="{StaticResource KeybindButtonStyle}"
                                MouseLeftButtonUp="KeybindButton_Click" Tag="KeyMinimize">
                            <TextBlock x:Name="KeyMinimizeText" Style="{StaticResource KeybindTextStyle}"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- RESTORE -->
                <Border Style="{StaticResource KeybindRowAltStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="RESTORE" Style="{StaticResource KeybindLabelStyle}"/>
                        <Border x:Name="KeyRestoreBorder" Grid.Column="1" Style="{StaticResource KeybindButtonStyle}"
                                MouseLeftButtonUp="KeybindButton_Click" Tag="KeyRestore">
                            <TextBlock x:Name="KeyRestoreText" Style="{StaticResource KeybindTextStyle}"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- TOGGLE OVERLAY -->
                <Border Style="{StaticResource KeybindRowStyle}" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="TOGGLE OVERLAY" Style="{StaticResource KeybindLabelStyle}"/>
                            <TextBlock Text="KEY PASSES THROUGH TO ROBLOX" Foreground="#6A6A6A" FontSize="10" Margin="0,2,0,0"/>
                        </StackPanel>
                        <Border x:Name="KeyToggleBorder" Grid.Column="1" Style="{StaticResource KeybindButtonStyle}"
                                MouseLeftButtonUp="KeybindButton_Click" Tag="KeyToggleOverlay">
                            <TextBlock x:Name="KeyToggleText" Style="{StaticResource KeybindTextStyle}"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- DISPLAY section -->
                <DockPanel Margin="0,0,0,6">
                    <TextBlock Text="DISPLAY" Style="{StaticResource GameSectionTitleStyle}"/>
                    <Border Style="{StaticResource GameSectionLineStyle}"/>
                </DockPanel>

                <Border Style="{StaticResource KeybindRowStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="OVERLAY WIDTH" Style="{StaticResource KeybindLabelStyle}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBox x:Name="WidthInput"
                                     Style="{StaticResource ReadableTextBox}"
                                     MinWidth="80" MaxWidth="100" TextAlignment="Center"
                                     PreviewTextInput="WidthInput_PreviewTextInput"
                                     PreviewKeyDown="WidthInput_PreviewKeyDown"/>
                            <Border x:Name="WidthApplyButton" Margin="4,0,0,0" Padding="8,5"
                                    Background="#0A0A0A" BorderBrush="#2A2A2A" BorderThickness="1"
                                    Cursor="Hand" MouseLeftButtonUp="WidthApplyButton_Click">
                                <TextBlock Text="&#x2713;" FontSize="14" FontWeight="Bold"
                                           Foreground="#D8D8D8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource KeybindRowAltStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="FONT SIZE" Style="{StaticResource KeybindLabelStyle}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBox x:Name="FontSizeInput"
                                     Style="{StaticResource ReadableTextBox}"
                                     MinWidth="80" MaxWidth="100" TextAlignment="Center"
                                     PreviewTextInput="FontSizeInput_PreviewTextInput"
                                     PreviewKeyDown="FontSizeInput_PreviewKeyDown"/>
                            <Border x:Name="FontSizeApplyButton" Margin="4,0,0,0" Padding="8,5"
                                    Background="#0A0A0A" BorderBrush="#2A2A2A" BorderThickness="1"
                                    Cursor="Hand" MouseLeftButtonUp="FontSizeApplyButton_Click">
                                <TextBlock Text="&#x2713;" FontSize="14" FontWeight="Bold"
                                           Foreground="#D8D8D8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource KeybindRowStyle}" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="JTAC MODE" Style="{StaticResource KeybindLabelStyle}"/>
                            <TextBlock Text="SHIFTS OVERLAY DOWN &amp; RIGHT FOR JTAC VIEW" Foreground="#6A6A6A" FontSize="10" Margin="0,2,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Border x:Name="JtacOffBorder" BorderThickness="1" Cursor="Hand"
                                    MouseLeftButtonUp="JtacOff_Click">
                                <TextBlock x:Name="JtacOffText" Text="OFF" FontWeight="Bold" FontSize="12"
                                           Padding="16,5" HorizontalAlignment="Center"/>
                            </Border>
                            <Border x:Name="JtacOnBorder" BorderThickness="1" Margin="0,0,2,0" Cursor="Hand"
                                    MouseLeftButtonUp="JtacOn_Click">
                                <TextBlock x:Name="JtacOnText" Text="ON" FontWeight="Bold" FontSize="12"
                                           Padding="16,5" HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <DockPanel Margin="0,0,0,6">
                    <TextBlock Text="INFO" Style="{StaticResource GameSectionTitleStyle}"/>
                    <Border Style="{StaticResource GameSectionLineStyle}"/>
                </DockPanel>

                <Border Style="{StaticResource KeybindRowStyle}" Margin="0,0,0,6">
                    <TextBlock FontSize="11" Foreground="{StaticResource MutedTextBrush}" TextWrapping="Wrap">
                        <Run Foreground="{StaticResource GoldTextBrush}" FontWeight="Bold" Text="BMS OVERLAY: "/>
                        <Run Text="SELECT YOUR FACTION AND ROLE, THEN USE KEYBINDS AND ARROWS TO NAVIGATE PUBLISHED ORDERS. POLL AND CHECKLIST UPDATES SYNC IN REAL TIME."/>
                    </TextBlock>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

