<Window x:Class="BMS.Overlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStyle="None" AllowsTransparency="True"
    Background="Transparent" Topmost="True"
        ShowInTaskbar="False" ResizeMode="NoResize"
        Left="0" Top="0" Width="500" MaxWidth="500"
        Title="BMS Overlay"
        Closing="Window_Closing">
    <Window.Resources>
        <!-- â•â•â• TACTICAL DESIGN SYSTEM â€” FLAT / NO GRADIENTS / NO ROUNDED CORNERS â•â•â• -->

        <!-- Gold (active/selected state only) -->
        <!-- Button styles and color resources now in App.xaml -->

        <!-- Slim scrollbar (olive-green tinted) -->
        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="6"/>
            <Setter Property="MinWidth" Value="6"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Style>
                                            <Style TargetType="Thumb">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Thumb">
                                                        <Border Background="#2A2A2A" Width="6" Height="60"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="6"/>
                    <Setter Property="MinHeight" Value="6"/>
                    <Setter Property="Width" Value="Auto"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Background="Transparent">
        <!-- Main Panel (visible when not minimized) -->
        <Border x:Name="MainPanel" Background="#E60A0A0A" BorderBrush="#2A2A2A" BorderThickness="0,0,1,1"
                Visibility="Visible">
            <DockPanel>
                <!-- Tab Bar -->
                <Grid DockPanel.Dock="Top" Margin="0,0,0,0" MaxWidth="500" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="1" Background="#2A2A2A"/>
                    <Button x:Name="BmsTabButton" Grid.Column="0" Content="BMS" Height="38"
                            Style="{StaticResource TacticalTabButton}"
                            Click="OnBmsTab_Click"/>
                    <Button x:Name="OptionsTabButton" Grid.Column="2" Content="OPTIONS" Height="38"
                            Style="{StaticResource TacticalTabButton}"
                            Click="OnOptionsTab_Click"/>
                </Grid>

                <!-- Separator under tabs -->
                <Border DockPanel.Dock="Top" Height="1" Background="#2A2A2A"/>
                
                <!-- Bottom Nav -->
                <Grid DockPanel.Dock="Bottom" Margin="0" Height="38" MaxWidth="500" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1"/>
                        <ColumnDefinition Width="38"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="1" Background="#2A2A2A"/>
                    <Border Grid.Column="3" Background="#2A2A2A"/>
                    <Border Grid.Column="5" Background="#2A2A2A"/>

                    <Button x:Name="PrevButton" Grid.Column="0" Content="â—€" Height="38" Click="OnPrev_Click"
                            Style="{StaticResource TacticalDarkButton}" FontSize="14"/>
                    <Button x:Name="MinimizeButton" Grid.Column="2" Content="â€”" Height="38"
                            Click="OnMinimize_Click" Style="{StaticResource TacticalDarkButton}" FontSize="14"/>
                    <Button x:Name="NextButton" Grid.Column="4" Content="â–¶" Height="38" Click="OnNext_Click"
                            Style="{StaticResource TacticalDarkButton}" FontSize="14"/>
                    <Button x:Name="NotepadButton" Grid.Column="6" Content="ðŸ“" Height="38" Width="38"
                            Click="OnNotepad_Click" Style="{StaticResource TacticalDarkButton}"
                            ToolTip="OPEN NOTEPAD" FontSize="14"/>
                </Grid>

                <!-- Separator above bottom nav -->
                <Border DockPanel.Dock="Bottom" Height="1" Background="#2A2A2A"/>
                
                <!-- Content -->
                <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" Background="Transparent"/>
            </DockPanel>
        </Border>
        
        <!-- Minimized Bar -->
        <Button x:Name="RestoreBar" Content="â–² RESTORE"
                VerticalAlignment="Bottom" Height="38" HorizontalAlignment="Stretch"
                Visibility="Collapsed"
            Click="OnRestore_Click" Style="{StaticResource TacticalDarkButton}" FontSize="12"/>
    </Grid>
</Window>
